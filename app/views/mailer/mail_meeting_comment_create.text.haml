= l(:mail_body_greeting) + ' ' + @authorname + ', '
- if @container.is_a? MeetingAgenda
  = @username + " " + t(:mail_body_meeting_comment_body_agenda) + " " + @container.subject + ": " + url_for(controller: 'meeting_agenda', action: 'show', id: @container.id, only_path: false)
- elsif @container.is_a? MeetingProtocol
  = @username + " " + t(:mail_body_meeting_comment_body_protocol) + " " + @container.meeting_agenda.subject + ": " + url_for(controller: 'meeting_protocol', action: 'show', id: @container.id, only_path: false)

= @comment
